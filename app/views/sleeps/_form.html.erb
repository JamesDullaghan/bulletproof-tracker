<%= form_for (@sleep), :html => { :class => "custom",
                                  :data => { :validate => 'parsley',
                                             :focus => 'first' }} do |f| %>

  <% if @sleep.errors.any? %>
    <ul>
    <% @sleep.errors.full_messages.each do |msg| %>
      <li class="parsley-large-error"><%= msg %></li>
    <% end %>
    </ul>
  <% end %>

  <div class="row collapse">
    <div class="large-4 columns end">
      <%= f.date_select(:sleep_date) %>
    </div>
  </div>

  <div class="row collapse">
    <div class="large-3 columns end">
      <%= f.text_field :hours, :class => 'required',
                               :data => { :required => true,
                                          :minlength => 1,
                                          :maxlength => 2,
                                          :min => 1,
                                          :max => 31,
                                          :type => 'number',
                                          :trigger => 'keyup' } %>
    </div>
  </div>
  <div class="row collapse">
    <div class="large-4 columns">
      <%= f.submit 'Add Sleep', class: 'button' %>
    </div>
  </div>
<% end %>