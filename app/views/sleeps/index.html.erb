<%= render 'layouts/dashboard_nav' %>
<div class="row">
  <div class="large-6 columns">
    <h1>Sleep Totals</h1>
  </div>
  <div class="large-6 columns">
    <%= link_to 'Add Sleep Record', new_sleep_path, class: 'button radius' %>
  </div>
</div>
<div class="row">
  <div class="large-5 columns">
    <h3 class="month">
      <%= link_to "<", date: @date.prev_month, class: 'cal-larr' %>
      <%= @date.strftime("%B %Y") %>
      <%= link_to ">", date: @date.next_month, class: 'cal-rarr' %>
    </h3>
    <%= calendar @date do |date| %>
      <%= date.day %>
      <% if @sleeps_by_date[date] %>
        <% @sleeps_by_date[date].each do |sleep| %>
          <%= content_tag :span, "#{sleep.sleep_date.strftime("%e")}", :data => { :tooltip => "" }, class: 'has-tip overlay', title: "#{sleep.hours} hours" %>
        <% end %>
      <% end %>
    <% end %>


    <%# @sleeps.each do |sleep| %>

        <!--h3><%#= sleep.sleep_date.strftime("%B %e %Y") %></h3>
        <h5><%#= sleep.hours %> hours of sleep</h5!-->
    <%# end %>
  </div>
  <div class="large-7 columns">
    <canvas id="sleepChart" width="500" height="415"></canvas>
  </div>

</div>
<div class="row">
  <div class="large-5 columns panel">
    <p><%= @total_average_sleep_time %></p>
    <p>Your aver<%= @date.strftime("%B") %>'s average sleep time: <%= @current_month_average_sleep_time %> hours</p>
  </div>
</div>



<%= javascript_include_tag 'application' %>
<%= javascript_include_tag sleeps_path %>