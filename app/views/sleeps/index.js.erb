var sleepChartData = {
  labels : <%= @total_sleep_months_array.to_json.html_safe %>,
  datasets : [
    {
      fillColor : "rgba(226,91,35,.5)",
      strokeColor : "rgba(245,143,79,1)",
      pointColor : "rgba(245,143,79,1)",
      pointStrokeColor : "rgba(245,143,79,1)",
      data : [<% @sleep_months.each do |month, sleep| %>
                <% for s in sleep %>
                  <%= s.hours %>,
                <% end %>
              <% end %>

      ]
    }
  ]
}

var sleepChart = document.getElementById("sleepChart").getContext("2d");

var avgSleep = new Chart(sleepChart).Line(sleepChartData);