<%= form_for(resource, :as => resource_name,
                       :url => registration_path(resource_name),
                       :html => { :method => :put,
                                  :data => { :validate => 'parsley',
                                             :focus => 'first' } }) do |f| %>

  <div class="row collapse">
    <div class="large-6 large-offset-3 columns">
        <h3>Edit <%= resource_name.to_s.humanize %></h3>

        <%= f.text_field :username, :autofocus => true,
                                    :class => 'required',
                                    :required => true,
                                    :minlength => 3,
                                    :maxlength => 24,
                                    :trigger => 'keyup' %>

        <%= f.email_field :email %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          Currently waiting confirmation for: <%= resource.unconfirmed_email %>
        <% end %>

        <%= f.password_field :password, :autocomplete => "off", placeholder: "(leave blank if you don't want to change it)" %>

        <%= f.password_field :password_confirmation %>


        <% if f.object.encrypted_password.present? %>
          <i></i>
          <%= f.password_field :current_password,
                               :placeholder => '(we need your current password to confirm your changes)',
                               :class => 'required',
                               :data => { :required => true,
                                          :minlength => 8,
                                          :maxlength => 24,
                                          :trigger => 'keyup' } %>
        <% end %>
        <%= f.submit "Update", class: 'button success radius' %>

    </div>
  </div>
<% end %>

<div class="row collapse">
  <div class="large-6 large-offset-3 columns">
    <h3>Cancel my account</h3>

    <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" },
                      :method => :delete,
                      :class => 'button radius' %></p>

    <%= link_to "Back", :back %>
  </div>
</div>
